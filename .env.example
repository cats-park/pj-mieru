# LLM API Configuration for Framework Detection
# At least one of these API keys is required for framework detection

# OpenAI (Recommended for general use)
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Anthropic Claude (Good for detailed analysis)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Perplexity (Fast analysis)
PERPLEXITY_API_KEY=pplx-your_perplexity_key_here
PERPLEXITY_MODEL=llama-3.1-sonar-large-128k-online

# LLM Configuration (Optional)
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.1

# Framework Detection Method
FRAMEWORK_DETECTION_METHOD=llm
FRAMEWORK_DETECTION_FALLBACK=false