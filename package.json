{
  "name": "project-mieru",
  "version": "1.0.0",
  "description": "Component visualization tool for Nuxt/Next.js projects",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "cli": "tsx src/cli.ts",
    "cli:build": "node dist/cli.js",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src"
  },
  "bin": {
    "mieru": "dist/cli.js"
  },
  "keywords": [
    "vue",
    "nuxt",
    "react",
    "nextjs",
    "component",
    "visualization",
    "mermaid",
    "dependency"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@babel/parser": "^7.24.0",
    "@vue/compiler-sfc": "^3.5.16",
    "commander": "^12.0.0",
    "dotenv": "^16.5.0",
    "glob": "^10.3.0",
    "mermaid": "^10.9.3"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
